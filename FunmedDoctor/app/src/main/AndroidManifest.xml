<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.funmed.funmeddoctor"
    android:versionCode="1"
    android:versionName="1.0.0">

    <application
        android:name="com.funmed.funmeddoctor.FunmedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.activity.MainTabActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mine.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".clinical.activity.DetectionSchemeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mine.activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".clinical.activity.SBKDetectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".scientific.activity.ScientificProjectOrderPlaceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".scientific.activity.NormalDetectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mine.activity.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mine.activity.UserInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mine.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mine.activity.ChangeNickNameActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.ChangeHeightActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.ChangeBirthdayActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.ChangeEmailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.ChangeAddressActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.ChangeAgeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.ChangeSexActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.UpdatePasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".mine.activity.ChangeWeightActivity" />
        <activity android:name=".scientific.activity.SeniorDetectionActivity" />
        <activity android:name=".scientific.activity.NormalDetectionConfirmActivity" />
        <activity android:name=".scientific.activity.DetectionUserInfoUploadActivity" />
        <activity android:name=".scientific.activity.CooperationResearchActivity" />
        <activity android:name=".scientific.activity.CommitSuccessActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 使用相机 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <!-- 检测网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取mac地址作为用户的备用唯一标识 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取用户手机的IMEI，用来唯一的标识用户 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 缓存资源优先存入SDcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 定位所需的权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 推送相关的权限 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- QQ登录所需权限 -->
    <uses-permission android:name="android.permission.GET_TASKS" />

</manifest>