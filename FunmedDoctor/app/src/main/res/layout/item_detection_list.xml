<?xml version="1.0" encoding="utf-8"?>
<com.funmed.funmeddoctor.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_clinical_data"
    android:background="@drawable/border_1dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/detection_pressed"
        android:layout_centerInParent="true"
        android:scaleType="centerInside" />

</com.funmed.funmeddoctor.widget.SquareRelativeLayout>