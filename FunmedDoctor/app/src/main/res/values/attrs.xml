<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    <!--圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--HeaderView-->
    <declare-styleable name="HeaderView">
        <attr name="headerViewLeftIcon" format="reference" />
        <attr name="headerViewLeftText" format="string" />
        <attr name="headerViewLeftTextSize" format="dimension" />
        <attr name="headerViewLeftTextColor" format="color" />
        <attr name="headerViewRightIcon" format="reference" />
        <attr name="headerViewRightIcon2" format="reference" />
        <attr name="headerViewRightText" format="string" />
        <attr name="headerViewRightTextSize" format="dimension" />
        <attr name="headerViewRightTextColor" format="color" />
        <attr name="headerViewMidIcon" format="reference" />
        <attr name="headerViewMidText" format="string" />
        <attr name="headerViewMidTextSize" format="dimension" />
        <attr name="headerViewMidTextColor" format="color" />
        <attr name="headerViewMidBottomText" format="string" />
        <attr name="headerViewMidBottomTextSize" format="dimension" />
        <attr name="headerViewMidBottomTextColor" format="color" />
    </declare-styleable>

    <!--TabView-->
    <declare-styleable name="TabViewAttribute">
        <attr name="tabNormalIcon" format="reference" />
        <attr name="tabSelectedIcon" format="reference" />
        <attr name="tabText" format="string" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabTextNormalColor" format="color|reference" />
        <attr name="tabTextSelectedColor" format="color|reference" />
        <attr name="tabNormalBgColor" format="reference" />
        <attr name="tabSelectedBgColor" format="reference" />
    </declare-styleable>

    <!--progressBar-->
    <declare-styleable name="DotProgressBar">
        <attr name="progressMax" format="integer" />
        <!--完成进度点的颜色-->
        <attr name="dotColor" format="color" />
        <!--未完成进度点的颜色-->
        <attr name="dotBgColor" format="color" />
        <!--显示的百分比-->
        <attr name="progressTextSize" format="dimension" />
        <attr name="progressTextColor" format="color" />
        <!--百分比使用系统字体，默认为false(使用外部导入字体assets/fonts/HelveticaNeueLTPro.ttf)-->
        <attr name="isFontSystem" format="boolean" />
        <!--百分比瘦身大小-->
        <attr name="thinPadding" format="integer" />
        <!--描述文本-->
        <attr name="describeText" format="string" />
        <attr name="describeTextSize" format="dimension" />
        <attr name="describeTextColor" format="color" />
        <!--图片按钮-->
        <attr name="btnImage" format="reference" />
        <attr name="btnPressedImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>

    <style name="dot_style">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <declare-styleable name="EditView">
        <attr name="editViewIcon" format="reference" />
        <attr name="editViewTitleText" format="string" />
        <attr name="editViewTitleTextSize" format="dimension" />
        <attr name="editViewTitleTextColor" format="color" />
        <attr name="editViewHint" format="string" />
        <attr name="editViewHintColor" format="color" />
        <attr name="editViewIsPwd" format="boolean" />
        <attr name="editViewIsNumPwd" format="boolean" />
        <attr name="editViewEditable" format="boolean" />
        <attr name="editViewBottomLine" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ExpandEditView">
        <attr name="editViewBg" format="reference"></attr>
        <attr name="editViewLineBg" format="color"/>
        <attr name="expandEditViewIcon" format="reference" />
        <attr name="expandEditViewHint" format="string" />
        <attr name="expandEditViewHintColor" format="color" />
        <attr name="expandEditViewIsPwd" format="boolean" />
        <attr name="expandEditViewIsNumPwd" format="boolean" />
        <attr name="expandEditViewEditable" format="boolean" />
        <attr name="showPwdImage" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
        <attr name="authCodeTv" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
    </declare-styleable>
    <!--TextViewHasLine-->
    <declare-styleable name="TextViewHasLine">
        <attr name="topItemText" format="string" />
        <attr name="topItemTextColor" format="color" />
        <attr name="topItemTextSize" format="dimension" />
        <attr name="line_bg_color" format="reference"/>
    </declare-styleable>

    <!--ItemViewLayout-->
    <declare-styleable name="ItemViewLayout">
        <attr name="ItemViewLayoutLineBgResId" format="reference"/>
        <attr name="ItemViewLayoutBgResId" format="reference"/>
        <attr name="ItemViewLayoutLeftText" format="string" />
        <attr name="ItemViewLayoutLeftTextColor" format="reference" />
        <attr name="ItemViewLayoutLeftTextSize" format="dimension" />
        <attr name="ItemViewLayoutLeftTextBottom" format="string" />
        <attr name="ItemViewLayoutLeftTextBottomColor" format="reference" />
        <attr name="ItemViewLayoutLeftTextBottomSize" format="dimension" />
        <attr name="ItemViewLayoutRightText" format="string" />
        <attr name="ItemViewLayoutRightTextColor" format="reference" />
        <attr name="ItemViewLayoutRightTextSize" format="dimension" />
        <attr name="RightArrowIcon" format="reference"/>
        <attr name="ItemViewLayoutPaddingLeft" format="dimension"/>
        <attr name="ItemViewLayoutPaddingRight" format="dimension"/>
        <attr name="ItemViewLayoutPaddingTop" format="dimension"/>
        <attr name="ItemViewLayoutPaddingBottom" format="dimension"/>
        <attr name="IsShowRightIcon" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
        <attr name="IsShowRightText" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
    </declare-styleable>

    <!-- CircularImageView Custom Styling -->
    <declare-styleable name="CircularImageView">

        <!-- Whether or not to draw a circular border around the image. -->
        <attr name="civ_border" format="boolean"/>
        <!-- The color of the border draw around the image. (if enabled) -->
        <attr name="civ_borderColor" format="color"/>
        <!-- Makes the border this pixels wide. (if enabled) -->
        <attr name="civ_borderWidth" format="dimension"/>
        <!-- Whether or not to draw a selector on this view upon touch events. -->
        <attr name="civ_selector" format="boolean"/>
        <!-- The color of the selector draw on top of the image upon touch events. (if enabled) -->
        <attr name="civ_selectorColor" format="color"/>
        <!-- The color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
        <attr name="civ_selectorStrokeColor" format="color"/>
        <!-- The selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
        <attr name="civ_selectorStrokeWidth" format="dimension"/>
        <!-- Whether or not to draw a shadow around your circular image. -->
        <attr name="civ_shadow" format="boolean"/>
        <!-- The radius for the shadow to extend to. (if enabled) -->
        <attr name="civ_shadowRadius" format="float"/>
        <!-- Horizontal shadow offset. (if enabled) -->
        <attr name="civ_shadowDx" format="float"/>
        <!-- Vertical shadow offset. (if enabled) -->
        <attr name="civ_shadowDy" format="float"/>
        <!-- The color of the shadow drawn around your circular image. (if enabled) -->
        <attr name="civ_shadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircularImageViewStyle">
        <attr name="circularImageViewDefault" format="reference"/>
    </declare-styleable>
    <declare-styleable name="ExpandableLayout">
        <attr name="el_headerLayout" format="reference"/>
        <attr name="el_contentLayout" format="reference" />
        <attr name="el_duration" format="integer" />
        <attr name="right_icon_normal_id" format="reference"/>
        <attr name="right_icon_press_id" format="reference"/>
    </declare-styleable>

    <!--pullListView-->
    <declare-styleable name="PullListView">
        <attr name="getMoreType">
            <enum name="auto" value="0" />
            <enum name="click" value="1" />
        </attr>
        <attr name="addPullHeaderByUser" format="boolean" />
    </declare-styleable>
</resources>