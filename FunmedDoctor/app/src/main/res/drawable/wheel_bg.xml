<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerColor="@color/gray_bg_color"
                android:endColor="@color/gray_bg_color"
                android:startColor="@color/gray_bg_color" />

            <stroke
                android:width="1dp"
                android:color="#00000000" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="4dp"
        android:right="4dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerColor="@color/gray_bg_color"
                android:endColor="@color/gray_bg_color"
                android:startColor="@color/gray_bg_color" />
        </shape>
    </item>

</layer-list>